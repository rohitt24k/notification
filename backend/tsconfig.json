{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.js"]
}